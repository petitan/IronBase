[package]
name = "mongolite"
version = "0.1.0"
edition = "2021"
authors = ["Your Name <your.email@example.com>"]
description = "Lightweight embedded document database - SQLite for MongoDB"
license = "MIT"

[lib]
name = "mongolite"
crate-type = ["cdylib", "rlib"]

[dependencies]
# JSON kezelés
serde = { version = "1.0", features = ["derive"] }
serde_json = "1.0"
# bson = "2.6"  # Temporarily removed - dependency issues with Rust 1.75
uuid = { version = "1.10", features = ["v4", "serde"] }

# Fájl I/O és memória-mapped fájlok
memmap2 = "0.9"
parking_lot = "0.12"

# Hashing és indexelés
ahash = "0.8"
dashmap = "5.5"

# Dátum és idő
chrono = { version = "0.4", features = ["serde"] }

# Hibakezelés
thiserror = "1.0"
anyhow = "1.0"

# Python binding
pyo3 = { version = "0.20", features = ["extension-module", "abi3-py38"] }

# Opcionális: teljesítmény és optimalizálás
crossbeam = "0.8"
# rayon = "1.7"  # Temporarily disabled due to rust version requirements

# Serialization
bincode = "1.3"

[dev-dependencies]
# criterion = "0.4"  # Temporarily disabled - needs Rust 1.80+
tempfile = "3.8"

[profile.release]
opt-level = 3
lto = true
codegen-units = 1
strip = true
