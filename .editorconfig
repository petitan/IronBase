# EditorConfig for IronBase
# https://editorconfig.org

root = true

# Default settings for all files
[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Rust files
[*.rs]
indent_size = 4

# Python files
[*.py]
indent_size = 4

# C# files
[*.cs]
indent_size = 4

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# TOML files
[*.toml]
indent_size = 4

# Markdown files - preserve trailing whitespace for line breaks
[*.md]
trim_trailing_whitespace = false

# Makefiles need tabs
[Makefile]
indent_style = tab

# Shell scripts
[*.sh]
indent_size = 2

# XML/csproj files
[*.{xml,csproj,props,targets}]
indent_size = 2
